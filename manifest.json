{
  "manifest_version": 2,
  "name": "Chrome History Viewer Lite",
  "version": "1.2",
  "author": "Original by Xerios, Fixed by Torrunt",
  "description": "Drop-down history viewer with search.",
  "icons": { "48": "icon.png", "128": "icon-128.png"},
  "options_page": "options.html",
  "background":
  {
	"scripts": ["init.js"],
	"persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "History Viewer"
  },
  "permissions": [
    "tabs",
	"history",
	"storage",
	"chrome://favicon/"
  ]
}
